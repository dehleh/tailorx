# Tailor-X Environment Variables
# Copy this file to .env and fill in values

# API Configuration
EXPO_PUBLIC_API_URL=https://api.tailorx.com/v1

# MediaPipe Pose Server (see /server/README.md)
# Local dev: http://192.168.x.x:8000/v1/pose  (use your LAN IP for physical device)
# Railway:  https://tailorx-pose-production-xxxx.up.railway.app/v1/pose
# Docker:   http://localhost:8080/v1/pose
EXPO_PUBLIC_POSE_API_URL=http://localhost:8000/v1/pose
EXPO_PUBLIC_POSE_API_KEY=

# Authentication (Optional)
# EXPO_PUBLIC_AUTH_DOMAIN=auth.tailorx.com
# EXPO_PUBLIC_CLIENT_ID=your_client_id

# ML Model Configuration (Optional)
# EXPO_PUBLIC_ML_MODEL_URL=https://storage.tailorx.com/models/body-measurement-v1.tflite

# Feature Flags
EXPO_PUBLIC_ENABLE_CLOUD_POSE=true
EXPO_PUBLIC_ENABLE_ON_DEVICE_POSE=true
# EXPO_PUBLIC_ENABLE_CLOUD_SYNC=true
# EXPO_PUBLIC_ENABLE_ANALYTICS=false

# Sentry (crash reporting â€” optional)
# EXPO_PUBLIC_SENTRY_DSN=

# Debug Mode (Optional)
# EXPO_PUBLIC_DEBUG_MODE=false
